/* pages/classic/classic.wxss */

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.header {
    display: flex;
    flex-direction: row;
    height: 100rpx;
    width: 100%;
    /* 定义flex子项在flex容器的当前行的侧轴方向上的对齐方式。 */
    align-items: center;
    /* 设置弹性盒子元素在主轴方向上的对齐方式 ： 两端分布*/
    justify-content: space-between;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}

.movie {
    width: 100%;
}

.epsoide {
    margin-left: 20rpx;
}

.like {
    margin-right: 20rpx;
}

.nav {
    position: absolute;
    bottom: 50rpx;
}

.share-btn {
    margin-top: 18rpx;
    margin-left: 10rpx;
}

.share {
    width: 40rpx;
    height: 40rpx;
}

.like-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-right: 30rpx;
}
