/* pages/book-detail/book-detail.wxss */

.container {
    width: 100%;
    background-color: #f5f5f5;
}

.head {
    background-color: #fff;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title {
    color: #755f5f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
}

.author {
    font-size: 28rpx;
    color: #999;
}

.head image {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

/* ================================== sub-container ============================ */

.sub-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 690rpx;
    margin-top: 30rpx;
    background-color: #fff;
    padding: 30rpx;
}

.headline {
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}

.comment-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.comment-container p-tag {
    margin-right: 15rpx;
    margin-bottom: 10rpx;
}

.num {
    font-size: 22rpx;
    color: #aaa;
    margin-left: 5rpx;
}

