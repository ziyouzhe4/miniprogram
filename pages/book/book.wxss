.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.header {
    position: fixed;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    width: 100%;
    border-top: 1px solid #f5f5f5;
    box-shadow: 0 0 3px 0 #e3e3e3;
    background-color: #fff;
    z-index: 99;
}

.box {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 50px;
    background-color: #f5f5f5;
    height: 68rpx;
    
    /* 这种写法也可以 1  */
    width: 700rpx; 

    /* 这种写法也可以 2 */
    /* width: calc(100% - 40px);  */
   
    /* 这种写法也可以 3 */
      /* margin-left: 20px;
      margin-right: 20px;
      flex-grow: 1; */

    color: #999;
}

.box image {
    margin-right: 10px;
    width: 14px;
    height: 14px;
    margin-bottom: 0px;
}

.sub-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
    margin-top: 100rpx;
}

.header-img {
    width: 106rpx;
    height: 34rpx;
    margin-top: 40rpx;
    background-color: rgb(27, 182, 86);
}

.books-container {
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 90rpx 0 90rpx;
}

.books-container p-book{
    margin-bottom: 10rpx;
}
